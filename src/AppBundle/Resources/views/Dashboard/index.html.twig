{% extends 'base.html.twig' %}

{% block body %}
    {% if pending|length %}
        <h2>Pending Recommendations</h2>
        <table style="width:100%">
            <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </thead>
            <tbody>
                {% for rec in pending %}
                <tr>
                    <td>{{ rec.id }}</td>
                    <td>{{ rec.submitterName }}</td>
                    <td>{{ rec.submitterEmail }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if approved|length %}
        <h2>My List</h2>
        <table style="width:100%">
            <thead>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </thead>
            <tbody>
                {% for rec in approved %}
                <tr>
                    <td>{{ rec.id }}</td>
                    <td>{{ rec.submitterName }}</td>
                    <td>{{ rec.submitterEmail }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-center">You don't have any recommendations yet!</p>
    {% endif %}
{% endblock %}
